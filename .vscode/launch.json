    "version": "0.2.0",
    "configurations": [
        
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "terminal.integrated.cwd": "${workspaceFolder}/part02-files",
            "env": {
                "PYTHONPATH": "${cwd}" 
            },
            "justMyCode": true
        }
    ]
}